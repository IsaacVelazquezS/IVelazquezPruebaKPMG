@model ML.Empleado
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<h2 class="text-center my-4 fw-bold text-primary">Empleados Registrados</h2>

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <button class="btn btn-success w-100" onclick="MostrarFormulario()">
                <i class="bi bi-search"></i> Búsqueda abierta
            </button>
        </div>
    </div>
</div>

@using (Html.BeginForm("GetAll", "Empleado", FormMethod.Post))
{
    <div class="container mb-5">
        <div class="card shadow-sm border" id="formularioBusqueda" style="display:none;">
            <div class="card-body">

                <h5 class="mb-4 text-primary fw-semibold">
                    🔍 Búsqueda de Empleado
                </h5>

                <div class="row g-3">

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        @Html.LabelFor(m => m.Age, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Age, new {
                        @class = "form-control",
                                        type = "text",
                                        pattern = "[0-9]+",
                                        placeholder = "Edad"
                                        })
                </div>

                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    @Html.LabelFor(m => m.JoiningYear, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.JoiningYear, new {
                                        @class = "form-control",
                                        type = "text",
                                        pattern = "[0-9]{4}",
                                        placeholder = "Año de ingreso"
                                        })
                </div>

                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    @Html.LabelFor(m => m.PaymentTier, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.PaymentTier, new {
                                        @class = "form-control",
                                        type = "text",
                                        pattern = "[0-9]+",
                                        placeholder = "Nivel de pago"
                                        })
                </div>

                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    @Html.LabelFor(m => m.ExperienceInCurrentDomain, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ExperienceInCurrentDomain, new {
                                        @class = "form-control",
                                        type = "text",
                                        pattern = "[0-9]+",
                                        placeholder = "Experiencia"
                                        })
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    @Html.LabelFor(m => m.Education.IdEducation, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.Education.IdEducation,
                                        new SelectList(Model.Education.Educations, "IdEducation", "Name"),
                                        "Selecciona educación",
                                        new { @class = "form-select" })
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    @Html.LabelFor(m => m.City.IdCity, "Ciudad", new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.City.IdCity,
                                        new SelectList(Model.City.Cities, "IdCity", "Name"),
                                        "Selecciona ciudad",
                                        new { @class = "form-select" })
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    @Html.LabelFor(m => m.Gender.IdGender, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.Gender.IdGender,
                                        new SelectList(Model.Gender.Genders, "IdGender", "Name"),
                                        "Selecciona género",
                                        new { @class = "form-select" })
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    @Html.LabelFor(m => m.EverBenched.IdEverBenche, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.EverBenched.IdEverBenche,
                                        new SelectList(Model.EverBenched.EverBenches, "IdEverBenche", "Description"),
                                        "Selecciona opción",
                                        new { @class = "form-select" })
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    @Html.LabelFor(m => m.LeaveOrnot, "¿Dejó la empresa?", new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.LeaveOrnot,
                                        new List<SelectListItem>
                                        {
                                        new SelectListItem { Text = "Sí", Value = "true" },
                                        new SelectListItem { Text = "No", Value = "false" }
                                        },
                                        "Selecciona",
                                        new { @class = "form-select" })
                </div>
            </div>

            <div class="row mt-4">
                <div class="col d-flex justify-content-end gap-2 flex-wrap">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <button type="button" class="btn btn-outline-danger px-4" onclick="cerrarFormulario()">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>
}

<div class="container-fluid mb-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-4 col-lg-3">
            @Html.ActionLink("➕ Nuevo Empleado", "Formulario", "Empleado",
                        new { IdEmpleado = 0 },
                        new { @class = "btn btn-success btn-lg w-100 shadow-sm" })
        </div>
    </div>
</div>

@if (Model.Empleados != null)
{
    <div class="container-fluid">
        <div class="table-responsive shadow-sm rounded-3 border">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Acciones</th>
                        <th>Edad</th>
                        <th>Año</th>
                        <th>Experiencia</th>
                        <th>Ciudad</th>
                        <th>Educación</th>
                        <th>Benched</th>
                        <th>Leave</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Empleado emp in Model.Empleados)
                    {
                        <tr>
                            <td class="text-center">
                                <div class="d-grid gap-2">
                                    <a class="btn btn-outline-primary"
                                       href="@Url.Action("Formulario", "Empleado", new { IdEmpleado = emp.IdEmpleado })">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a class="btn btn-outline-danger"
                                       asp-action="Delete"
                                       asp-route-IdEmpleado="@emp.IdEmpleado"
                                       onclick="return confirm('¿Eliminar empleado?')">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                            <td>@emp.Age</td>
                            <td>@emp.JoiningYear</td>
                            <td>@emp.ExperienceInCurrentDomain</td>
                            <td>@emp.City?.Name</td>
                            <td>@emp.Education?.Name</td>
                            <td>@emp.EverBenched?.Description</td>
                            <td class="text-center">@((emp.LeaveOrnot ?? false) ? "Sí" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<script>

    function MostrarFormulario() {
        $("#formularioBusqueda").css("display", "block");

    }
    function cerrarFormulario() {
        document.getElementById("formularioBusqueda").style.display = "none";
    }
   

</script>